# --- Email Settings ---
SMTP_HOST=smtp.yourmail.com
SMTP_PORT=587
SMTP_USER=your@email.com
SMTP_PASS=your_password
SMTP_FROM_NAME="Data Removal Bot"

# Distinct reply-to address to handle responses
SMTP_REPLY_TO=removals-replies@email.com

# --- IMAP Settings (for polling replies) ---
IMAP_HOST=imap.yourmail.com
IMAP_PORT=993
IMAP_USER=removals-replies@email.com
IMAP_PASS=your_password
IMAP_TLS=true

# --- Ollama Local AI Settings ---
OLLAMA_URL=http://host.docker.internal:11434
OLLAMA_MODEL=llama3

# --- Database ---
DB_PATH=/app/data/db.sqlite

# --- Web App ---
PORT=3000
